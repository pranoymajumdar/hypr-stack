{
  "name": "hypr-stack",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "pnpm exec biome lint",
    "format": "pnpm exec biome format --write",
    "check": "pnpm exec biome check --write",
    "db:generate": "pnpm --filter @hypr-stack/db generate",
    "db:migrate": "pnpm --filter @hypr-stack/db migrate",
    "db:push": "pnpm --filter @hypr-stack/db push",
    "db:pull": "pnpm --filter @hypr-stack/db pull",
    "db:check": "pnpm --filter @hypr-stack/db check",
    "db:up": "pnpm --filter @hypr-stack/db up",
    "db:studio": "pnpm --filter @hypr-stack/db studio",
    "ui:add": "pnpm --filter @hypr-stack/ui run add",
    "ui:refresh": "pnpm --filter @hypr-stack/ui run refresh"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "@types/node": "^20.11.17"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20"
  }
}
